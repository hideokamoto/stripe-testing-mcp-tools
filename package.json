{
  "name": "stripe-test-mcp",
  "version": "0.2.0",
  "description": "Simply MCP server for testing for your stripe integrations",
  "private": false,
  "type": "module",
  "author": "hideokamoto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hideokamoto/stripe-testing-mcp-tools.git"
  },
  "homepage": "https://github.com/hideokamoto/stripe-testing-mcp-tools#readme",
  "bugs": {
    "url": "https://github.com/hideokamoto/stripe-testing-mcp-tools/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "stripe",
    "testing",
    "test-helpers",
    "stripe-api",
    "claude"
  ],
  "bin": {
    "stripe-test-mcp": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "np"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "stripe": "^18.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@vitest/ui": "^4.0.16",
    "np": "^10.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  }
}
